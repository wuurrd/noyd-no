---
/**
 * * Long contact form to get details about a customer's project. Modify as needed
 *
 * See https://cosmicthemes.com/docs/contact-form/ for more information on how to set up a contact form
 *
 * Form inputs are styled in "global.scss" as form__input, so you can use them elsewhere on the site
 */

// components
import Button from "@components/Button/Button.astro";
---

<section id="contact" class="mx-auto min-w-fit max-w-3xl rounded-lg">
  <div class="rounded-lg">
    <!-- <h2 class="h2">Kontakt oss</h2> -->
    <form id="contact-form" name="contact form" class="mt-4 flex flex-col gap-4" action="/api/contact" method="POST">
      <input type="hidden" name="form-name" value="contact" />
      <!-- <div>
        <div class="grid gap-4 sm:grid-cols-2">
          <div class="flex flex-col">
            <label for="contact-fname" class="form__label sr-only">First Name <span class="text-red-600">*</span></label
            >
            <input type="text" class="form__input" name="fname" id="contact-fname" placeholder="first name" required />
          </div>

          <div class="flex flex-col">
            <label for="contact-lname" class="form__label sr-only">Last Name <span class="text-red-600">*</span></label>
            <input type="text" class="form__input" name="lname" id="contact-lname" placeholder="last name" required />
          </div>
        </div>
      </div> -->
      <div>
        <label for="contact-name" class="form__label sr-only mb-1">Ditt Navn <span class="text-red-600">*</span></label>
        <input type="text" class="form__input" name="contact-name" id="contact-name" placeholder="Ditt navn" required />
      </div>
      <div>
        <label for="contact-company" class="form__label sr-only mb-1"
          >Sameiet eller borettslagets navn <span class="text-red-600">*</span></label
        >
        <input
          type="text"
          class="form__input"
          name="contact-company"
          id="contact-company"
          placeholder="Sameiet eller borettslagets navn"
          required
        />
      </div>
      <!-- <div>
        <div class="grid gap-4 sm:grid-cols-3">
          <div class="flex flex-col">
            <label for="contact-city" class="form__label sr-only">City <span class="text-red-600">*</span></label>
            <input type="text" class="form__input" name="city" id="contact-city" placeholder="city" required />
          </div>

          <div class="flex flex-col">
            <label for="contact-state" class="form__label sr-only">State <span class="text-red-600">*</span></label>
            <input type="text" class="form__input" name="state" id="contact-state" placeholder="state" required />
          </div>

          <div class="flex flex-col">
            <label for="contact-zip" class="form__label sr-only">Zip Code <span class="text-red-600">*</span></label>
            <input type="text" class="form__input" name="zip" id="contact-zip" placeholder="zip code" required />
          </div>
        </div>
      </div> -->
      <div>
        <label for="contact-email" class="form__label sr-only mb-1"
          >E-post addresse <span class="text-red-600">*</span></label
        >
        <input
          type="email"
          class="form__input"
          name="contact-email"
          id="contact-email"
          inputmode="email"
          placeholder="E-post addresse"
          required
        />
      </div>
      <div>
        <label for="contact-phone" class="form__label sr-only mb-1"
          >Telefonnummer <span class="text-red-600">*</span></label
        >
        <input
          type="tel"
          class="form__input"
          name="contact-phone"
          id="contact-phone"
          inputmode="tel"
          placeholder="Telefonnummer"
        />
      </div>
      <!-- <div>
        <label for="contact-timeframe" class="form__label sr-only mb-1"
          >Desired Time Frame <span class="text-red-600">*</span></label
        >
        <input
          type="text"
          class="form__input"
          name="timeframe"
          id="contact-timeframe"
          placeholder="desired time frame for the work to be completed"
          required
        />
      </div>
      -->
      <div>
        <label for="contact-comments" class="form__label sr-only mb-1"
          >Fortell oss kort om hvilke utfordringer dere har i dag <span class="text-red-600">*</span></label
        >
        <textarea
          name="contact-comments"
          class="form__input"
          id="contact-comments"
          rows="4"
          placeholder="Fortell oss kort om hvilke utfordringer dere har i dag"></textarea>
      </div>
      <Button variant="primary" type="submit">Send</Button>
    </form>
  </div>
</section>
